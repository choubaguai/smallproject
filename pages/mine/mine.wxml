<view class="userinfo">
  <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
  <view class="userinfo-nickname">
    <text class="userinfo-nickname" bindtap="{{login_reg ?  'login' : ''}}">{{phone}}</text>
  </view>
</view>

<view class="userinfo-setting">
  <view class='view-tenant-name'>
    <text class='text-color'>昵称：</text>
    <text>{{userInfo.nickName}}</text>
  </view>
  <view class='view-tenant-number'>
    <text class='text-color'>电话：</text>
    <text>{{phone=="点我登录"? "" : phone}}</text>
  </view>
</view>